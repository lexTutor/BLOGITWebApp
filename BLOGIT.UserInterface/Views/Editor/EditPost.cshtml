
@model OtherPostActivitiesPostVM
@{
    ViewData["Title"] = "Edit post";
    var c = Model;
}

<form asp-controller="Editor" asp-action="Edit">
    <h1 class="text-primary text-center m-4">Are you sure you want to <span><strong>Edit</strong></span> this <span><strong>post?</strong></span></h1>
    <div class="container m-auto">
        <hr />
        <dl class="row">
            <dt>
                @Html.DisplayNameFor(model => model.PostTitle)
            </dt>
            <dd class="col-sm-10">
                <span asp-validation-for="@Model.PostDetails"></span>
                <input type="text" asp-for="@Model.PostTitle" value="@Model.PostTitle" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostCreatorName)
            </dt>
            <dd class="col-sm-10">
                <p>@Model.PostCreatorName</p>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostDetails)
            </dt>
            <dd class="col-sm-10">
                <span asp-validation-for="@Model.PostDetails"></span>
                <textarea rows="15" cols="70" type="text" asp-for="@Model.PostDetails" value="@Model.PostDetails"></textarea>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostCategories)
            </dt>
            <dd class="col-sm-10">
                <p>@Model.PostCategories</p>
            </dd>
        </dl>


        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Update" class="btn btn-primary" id="btn_delete" />
    </div>
</form>

}
