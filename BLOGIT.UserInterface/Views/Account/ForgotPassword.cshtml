@model ForgotPasswordVM
@{
    ViewBag.Title = "Forgot Password";
}

<div class="container justify-content-center" style="display: flex; padding: 7.5em 0">
    <div class="card" style="width: 40em">
        <div class="alert alert-warning alert-dismissible fade show" role="alert" asp-validation-summary="ModelOnly">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="ForgotPassword" asp-controller="Account" method="post">
                <h2>Recover your Password</h2>
                <h4>Enter your email</h4>
                <div class="form-group">
                    <label asp-for="EmailAddress">Email Address</label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send Mail</button>
            </form>
        </div>
        @if (ViewBag.SuccessMsg != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    @ViewBag.SuccessMsg
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>