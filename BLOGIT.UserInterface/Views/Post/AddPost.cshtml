@model AddPostVM
@{
    ViewBag.Title = "New Post";
}

<div class="container px-lg-2">
    <form enctype="multipart/form-data" asp-action="AddPost" asp-controller="Post" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <h2>Add a new post</h2>
        <div class="form-group">
            <label asp-for="PostTitle">Title</label>
            <input asp-for="PostTitle" class="form-control" />    
            <span asp-validation-for="PostTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <div>
                <input asp-for="Image" class="form-control" rows="5" />
                <label class="custom-file-label">Select file...</label>
            </div>
        </div>
        <div class="form-group">
            <select asp-for="CategoriesId" asp-items="Model.Categories" multiple required>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PostDetails">Text</label>
            <textarea asp-for="PostDetails" class="form-control" rows="9"></textarea>
            <span asp-validation-for="PostDetails"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Post</button>
    </form>
</div>